<%- include('partials/header.ejs') %>

<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-lg" style="background-color: var(--text-light); border-color: var(--primary-accent);">
          <div class="card-body p-5">
            <h2 class="card-title text-center mb-4" style="color: var(--primary-accent);"><%= title %></h2>
            <div class="text-center mb-4">
              <img src="https://covers.openlibrary.org/b/olid/<%=cover%>-L.jpg" alt="<%= title %> cover" class="img-fluid rounded shadow" style="max-height: 300px;">
            </div>
            <h3 class="text-center text-muted mb-4" style="color: var(--secondary-accent);"><%= author %></h3>

            <form action="/addBook" method="post">
              <input type="hidden" name="title" value="<%= title %>">
              <input type="hidden" name="author" value="<%= author %>">
              <input type="hidden" name="bookCover" value="<%= cover %>">
              <div class="mb-4">
                <textarea class="form-control" name="review" id="myreview" rows="5" placeholder="Write your review here..." style="background-color: var(--primary-bg); color: var(--text-dark); border-color: var(--primary-accent);"></textarea>
              </div>
              <div class="d-grid gap-3">
                <button type="submit" class="btn btn-lg" style="background-color: var(--primary-accent); color: var(--text-light);">Add book</button>
                <a href="/" class="btn btn-lg btn-outline-secondary" style="color: var(--primary-accent); border-color: var(--primary-accent);">Back</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<%- include('partials/footer.ejs') %>